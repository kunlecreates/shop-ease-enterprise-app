{
  "name": "product-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main.js",
    "migrate:run": "ts-node -r tsconfig-paths/register scripts/run-migrations.ts",
    "test": "jest --testTimeout=30000",
    "test:unit": "jest --testPathPattern=test/unit --testTimeout=30000",
    "test:integration": "jest --testPathPattern=test/integration --testTimeout=60000 --runInBand",
    "test:cov": "jest --coverage --testTimeout=30000",
    "migration:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run -d src/config/data-source.ts",
    "migration:generate": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:generate src/migrations/Auto -d src/config/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "jest": "^29.5.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.2.2",
    "testcontainers": "^10.4.0",
    "@testcontainers/postgresql": "^10.4.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
